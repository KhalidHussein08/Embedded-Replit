<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Open Replit in Modal</title>
    <style>
        body {
            font-family: Arial, sans-serif;
            margin: 0;
            padding: 0;
            display: flex;
            justify-content: center;
            align-items: center;
            height: 100vh;
            background-color: #f4f4f4;
        }

        /* Button Styling */
        .open-btn {
            padding: 15px 25px;
            background-color: #4CAF50;
            color: white;
            font-size: 18px;
            text-decoration: none;
            border-radius: 5px;
            cursor: pointer;
        }

        .open-btn:hover {
            background-color: #45a049;
        }

        /* Modal Styles */
        .modal {
            display: none;  /* Hidden by default */
            position: fixed;
            z-index: 1;
            left: 0;
            top: 0;
            width: 100%;
            height: 100%;
            background-color: rgba(0, 0, 0, 0.7);  /* Semi-transparent background */
        }

        /* Modal Content (iframe) */
        .modal-content {
            position: relative;
            top: 10%;
            margin: auto;
            padding: 20px;
            background-color: white;
            border-radius: 8px;
            width: 80%;
            max-width: 900px;
            height: 70%;
        }

        iframe {
            width: 100%;
            height: 100%;
            border: none;
        }

        /* Close Button */
        .close {
            position: absolute;
            top: 10px;
            right: 10px;
            font-size: 30px;
            color: #333;
            cursor: pointer;
        }

        .close:hover {
            color: red;
        }
    </style>
</head>
<body>

    <!-- Button to Open the Modal -->
    <button class="open-btn" onclick="openModal()">Open Replit</button>

    <!-- The Modal -->
    <div id="myModal" class="modal">
        <!-- Modal Content (iframe) -->
        <div class="modal-content">
            <span class="close" onclick="closeModal()">&times;</span>
            <iframe id="replitIframe" src="" title="Replit" allowfullscreen></iframe>
        </div>
    </div>

    <script>
        // Open the modal and set the iframe src to the Replit project URL
        function openModal() {
            var modal = document.getElementById("myModal");
            var iframe = document.getElementById("replitIframe");
            
            // Set the src to your Replit project URL (replace with your Replit project URL)
            iframe.src = "https://replit.com/@yourusername/your-replit-project";  // Update with your project URL

            modal.style.display = "block";  // Show the modal
        }

        // Close the modal
        function closeModal() {
            var modal = document.getElementById("myModal");
            var iframe = document.getElementById("replitIframe");

            iframe.src = "";  // Clear iframe src to stop the Replit project from running when modal is closed
            modal.style.display = "none";  // Hide the modal
        }

        // Close the modal if the user clicks outside of the modal content
        window.onclick = function(event) {
            var modal = document.getElementById("myModal");
            if (event.target == modal) {
                closeModal();
            }
        }
    </script>

</body>
</html>
